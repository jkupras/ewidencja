<div class="container">
<h1>AgroArkusz</h1>
<%if !current_user %>
<p>Witamy na stronie AgroArkusz</p>

<p>Zaloguj się lub załóż konto</p>
<%else%>
<p>Witaj <%= current_user.email%></p>
<p>Jesteś zalogowany</p>
<%end%>
<%if !current_user %>
<%= button_to "Zaloguj się", new_user_session_path,
       :method => :get %>

<%= button_to "Załóż konto", new_user_registration_path,
       :method => :get %>
       <%end%>
</div>
