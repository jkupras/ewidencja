<h1>Ewidencja</h1>

<div class="table-responsive">
<table class="table table-bordered">



<%@lata=Array.new%>

  <% @ewidencjas.each do |x| %>
  <%if current_user.id==x.user_id%>
  <%@lata<<x.data.year%>

  <%end%>
<%end%>

 <%@lata.uniq.each do |y| %>
<%@nr=1%>
 <% @przychody=0.00 %>
<%@rozchody=0.00%>

<div class="table-responsive">

<table class="table table-bordered">
  <thead>
    <tr>
      <th>numer</th>
