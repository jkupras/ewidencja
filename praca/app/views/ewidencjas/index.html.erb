        <%@nr=@nr+1%>
     <%@przychody=@przychody+ewidencja.przychod%>
     <%@rozchody=@rozchody+ewidencja.wydatki%>

     <%case ewidencja.data.mon%>
     <%when 1%>
     <%@styczen= @styczen+ewidencja.przychod-ewidencja.wydatki%>
     <%when 2%>
     <%@luty+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 3%>
     <%@marzec+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 4%>
     <%@kwiecien+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 5%>
     <%@maj+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 6%>
     <%@czerwiec+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 7%>
     <%@lipiec+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 8%>
     <%@sierpien+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 9%>
     <%@wrzesien+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 10%>
     <%@pazdziernik+=ewidencja.przychod-ewidencja.wydatki%>
     <%when 11%>
     <%@listopad+=ewidencja.przychod-ewidencja.wydatki%>
      <%when 12%>
     <%@grudzien+=ewidencja.przychod-ewidencja.wydatki%>


<%end%>
      </tr>

<% end %>


    <%end%>

