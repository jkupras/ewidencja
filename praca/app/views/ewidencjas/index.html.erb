      <th>Przychod</th>
      <th>Wydatki</th>
      <th>Uwagi</th>
      <th colspan="3"></th>
    </tr>
  </thead>


    <% @ewidencjas.each do |ewidencja| %>
    <%if y==ewidencja.data.year%>
<%if current_user.id==ewidencja.user_id%>
<tbody>
      <tr>
      <td><%=@nr%></td>
        <td><%= ewidencja.data %></td>
        <td><%= ewidencja.nr %></td>
        <td><%= ewidencja.przychod %></td>
        <td><%= ewidencja.wydatki %></td>
        <td><%= ewidencja.uwagi %></td>
        <td><%= link_to 'Show', ewidencja %></td>
        <td><%= link_to 'Edit', edit_ewidencja_path(ewidencja) %></td>
        <td><%= link_to 'Destroy', ewidencja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%@nr=@nr+1%>
     <%@przychody=@przychody+ewidencja.przychod%>
     <%@rozchody=@rozchody+ewidencja.wydatki%>
