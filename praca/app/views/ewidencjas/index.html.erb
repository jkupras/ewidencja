    <% @ewidencjas.each do |ewidencja| %>
    <% if y==ewidencja.data.year%>

<tbody>
      <tr>
      <td><%=@nr%></td>
        <td><%= ewidencja.data %></td>
        <td><%= ewidencja.nr %></td>
        <td><%= ewidencja.przychod %></td>
        <td><%= ewidencja.wydatki %></td>
        <td><%= ewidencja.uwagi %></td>
        <td><%= link_to 'Show', ewidencja %></td>
        <td><%= link_to 'Edit', edit_ewidencja_path(ewidencja) %></td>
